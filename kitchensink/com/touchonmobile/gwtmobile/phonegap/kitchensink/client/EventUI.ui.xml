<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:com.touchonmobile.gwtmobile.phonegap.kitchensink.client">
	<ui:style>
		.fill {
			width: 100%;
			height: 100%;
		}
	</ui:style>
	<g:VerticalPanel styleName="{style.fill}">
	<m:Header title="Event"></m:Header>
	<g:Label>Note: onPause and onResume events only work on an Android device.</g:Label>
	<g:TextArea ui:field="text" styleName="{style.fill}" />
	</g:VerticalPanel> 
</ui:UiBinder> 