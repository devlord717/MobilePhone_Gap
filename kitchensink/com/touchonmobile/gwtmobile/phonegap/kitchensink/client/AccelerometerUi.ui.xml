<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:com.touchonmobile.gwtmobile.phonegap.kitchensink.client">
	<ui:style>
		.fill {
			width: 100%;
			height: 100%;
		}
	</ui:style>
	<g:VerticalPanel styleName="{style.fill}">
		<m:Header title="Accelerometer"></m:Header>
		<g:Button ui:field="current">Get Current  Acceleration</g:Button>
		<g:Button ui:field="watch">Watch Accelerometer</g:Button>
		<g:Button ui:field="clear">Clear Watch</g:Button>
		<g:TextArea ui:field="text" styleName="{style.fill}" />
	</g:VerticalPanel>
</ui:UiBinder> 