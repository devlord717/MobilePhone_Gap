<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:com.gwtmobile.ui.client.widgets">
	<ui:style>
		table > tbody > tr:last-child {
			height: 100%;
		}	
	</ui:style>
	<g:HTMLPanel>
		<m:HeaderPanel caption="File" leftButton="Back"></m:HeaderPanel>
		<g:HorizontalPanel>
			<g:VerticalPanel>
				<g:Button ui:field="create">Create Dir</g:Button>
				<g:Button ui:field="file">Test File Exists</g:Button>
				<g:Button ui:field="dir">Test Dir Exists</g:Button>
				<g:Button ui:field="deldir">Delete Dir</g:Button>
				<g:Button ui:field="delfile">Delete File</g:Button>
				<g:Button ui:field="diskspace">Free Disk Space</g:Button>
			</g:VerticalPanel>
			<g:VerticalPanel>
				<g:Button ui:field="write">Write</g:Button>
				<g:Button ui:field="truncate">Truncate</g:Button>
				<g:Button ui:field="seek">Seek</g:Button>
				<g:Button ui:field="readdata">Read As Data URL</g:Button>
				<g:Button ui:field="readtext">Read As Text</g:Button>
				<g:Button ui:field="abort">Abort</g:Button>
			</g:VerticalPanel>
		</g:HorizontalPanel> 
		<g:TextArea ui:field="text" />
	</g:HTMLPanel>
</ui:UiBinder> 